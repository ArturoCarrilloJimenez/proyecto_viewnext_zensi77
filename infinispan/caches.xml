<?xml version="1.0"?>
<infinispan xmlns="urn:infinispan:config:14.0">
    <cache-container>
        <caches>
            <distributed-cache name="productCache" owners="2" mode="SYNC" statistics="true">
                <encoding>
                    <key media-type="application/x-protostream"/>
                    <value media-type="application/x-protostream"/>
                </encoding>
                <locking isolation="REPEATABLE_READ"/>
            </distributed-cache>
        </caches>
    </cache-container>
</infinispan>